<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<!-- 
		Running the selenium tests in batch mode.
		  To run the tests in batch mode, you need to issue the "mvn" command with the following parameters
		  -Pselenium : activates the selenium profile in the POM
		  -Dselenium.email=true : sends email
		  -Dselenium.browser : corresponds to the enum in SeleniumDriverFactory, current vals are 'firefox', 'ie', or 'chrome'
		  -Dselenium.browser.name : will appear on the summary line of the report (use this to distinguish IE6,7,8,9)
		  -Dselenium.env : combination of country code and env, like en_GB-dev, en_GB-qa, matches property file names in src/test/resources
		  -Dselenium.threadCount : number of test threads to run in parallel (default is 8)
	 -->

	<context:component-scan base-package="com.bc.intl.selenium"/>
	
	<!--  This bean allows us to vary the config between envs -->
	<bean id="configProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreResourceNotFound" value="false"/>
		<property name="locations">
			<list>
				<value>file:./src/test/resources/com/mentat/headless/test.properties</value>
			</list>
		</property>
	</bean>
	
	<bean class="com.bc.util.http.impl.HttpConnectionService">
		<property name="httpClientStrategy">
			<bean class="com.bc.util.http.impl.SimpleHttpClientStrategy">
				<property name="allowLenientSsl" value="true"/>
			</bean>
		</property>
	</bean>
	
	<bean id="sauceAuthentication" class="com.saucelabs.common.SauceOnDemandAuthentication">
		<constructor-arg name="username" value="stephenh" />
		<constructor-arg name="accessKey" value="460a6188-4b00-474f-bf50-27170654c2b4" />
	</bean>
	
</beans> 	
	
	